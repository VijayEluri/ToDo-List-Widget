<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <!-- Action buttons -->

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#FF323232"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <ImageView
            android:id="@+id/ok_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="0.5"
            android:background="@drawable/buttons"
            android:src="@drawable/action_save" />

        <ImageView
            android:id="@+id/cancel_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="0.5"
            android:background="@drawable/buttons"
            android:src="@drawable/action_cancel" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/button_layout" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#FF323232"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="3dp" >

                <!-- Font size selector -->

                <org.chrisbailey.todo.widgets.NumberPicker
                    android:id="@+id/font_size_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true" />

                <!-- Scroll buttons -->

                <LinearLayout
                    android:id="@+id/scroll_buttons_enable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/font_size_selector"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/scroll_buttons_up"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/action_scroll_up" />

                    <ImageView
                        android:id="@+id/scroll_buttons_down"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/action_scroll_down" />
                </LinearLayout>

                <!-- ACTIVE item color selector -->

                <ImageView
                    android:id="@+id/pick_color_active"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape" />

                <ImageView
                    android:id="@+id/active_color_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@id/pick_color_active"
                    android:background="@drawable/icon_active_1" />

                <!-- FINISHED item color selector -->

                <ImageView
                    android:id="@+id/pick_color_finished"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/pick_color_active"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape" />

                <ImageView
                    android:id="@+id/finished_color_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@id/active_color_icon"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@id/pick_color_finished"
                    android:background="@drawable/icon_finished_1" />
            </RelativeLayout>

            <!-- tick box image selector -->

            <Gallery
                android:id="@+id/icon_selector"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <!-- Background image selector -->

            <Gallery
                android:id="@+id/background_selector"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#FF323232" />

            <!-- Preview panel -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/example_background"
                android:gravity="center"
                android:padding="3dp" >

                <RelativeLayout
                    android:layout_width="146dp"
                    android:layout_height="146dp"
                    android:orientation="vertical"
                    android:padding="6dp" >

                    <ImageView
                        android:id="@+id/preview"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentTop="true"
                        android:scaleType="fitXY" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:paddingBottom="6dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp" >

                        <TextView
                            android:id="@+id/padding1"
                            android:layout_width="fill_parent"
                            android:layout_height="6dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true" />

                        <TextView
                            android:id="@+id/padding2"
                            android:layout_width="fill_parent"
                            android:layout_height="4dp"
                            android:layout_below="@id/padding1" />

                        <TextView
                            android:id="@+id/notetitle"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/padding2"
                            android:gravity="center_horizontal"
                            android:paddingBottom="3dp"
                            android:shadowColor="#AAAAAAFF"
                            android:shadowDx="1.2"
                            android:shadowDy="1.2"
                            android:shadowRadius="0.2"
                            android:text="Lorem"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/noteimage_1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@id/notetitle"
                            android:layout_marginTop="3dp"
                            android:src="@drawable/icon_active_1" />

                        <TextView
                            android:id="@+id/note_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/noteimage_1"
                            android:layout_below="@id/notetitle"
                            android:layout_toRightOf="@id/noteimage_1"
                            android:minWidth="20dp"
                            android:paddingLeft="3dp"
                            android:text="Ipsum" />

                        <ImageView
                            android:id="@+id/noteimage_2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@+id/noteimage_1"
                            android:layout_marginTop="3dp"
                            android:src="@drawable/icon_finished_1" />

                        <TextView
                            android:id="@+id/note_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/noteimage_2"
                            android:layout_below="@id/note_1"
                            android:layout_toRightOf="@id/noteimage_2"
                            android:minWidth="20dp"
                            android:paddingLeft="3dp"
                            android:text="Dolor" />
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>